<link rel="stylesheet" href="/css/login.css">

{{#if log}}
    {{#if adm}}
        <main>
        <h1>Bem vindo, {{nomeAdm}}</h1>
    </main>
    {{else}}
    <main>
        <h2>Informações da conta:</h2>
        <div class="lista_cliente">
            {{#if valores}}
            <label for="nome">Nome:</label><p>{{valores.nome}} {{valores.sobrenome}}</p><br>
            <label for="cpf">Cpf:</label><p>{{valores.cpf}}</p><br>
            <label for="telefone">Telefone:</label><p>{{valores.telefone}}</p><br>
            <label for="email">E-mail:</label><p>{{valores.email}}</p><br>
            {{/if}}
        </div>


     <div class="sistemaaa_nav">
            <nav>
                <a href="/logout">Sair da conta</a>
            </nav>
        </div>
    </main>
    {{/if}}
{{else}}
    <main>
        <h1>Efetuar Login</h1>

        <form action="/login" method="post">
        <input type="email" name="email" placeholder="Digite seu email"><br>
        <input type="password" name="senha" placeholder="Digite sua senha"><br>
        <br>
        <button class="log" type="submit">Entrar</button>
        </form>
    </main>
    <main>
        <h1>Ainda não está logado? Cadastre-se:</h1>

        <form action="/cadastrar_usuario" method="post">
        {{!-- <label for="nome">Digite seu Nome</label> --}}
        <input type="text" name="nome" placeholder="Digite seu Nome"><br>
        {{!-- <label for="sobrenome">Digite seu Sobrenome</label> --}}
        <input type="text" name="sobrenome" placeholder="Digite seu Sobrenome"><br>
        {{!-- <label for="cpf">Digite seu cpf</label> --}}
        <input type="text" name="cpf" placeholder="Digite seu cpf"><br>
        {{!-- <label for="telefone">Digite seu telefone</label> --}}
        <input type="text" name="telefone" placeholder="Digite seu telefone"><br>
        {{!-- <label for="email">Digite seu email</label> --}}
        <input type="email" name="email" placeholder="Digite seu email"><br>
        {{!-- <label for="senha">Digite sua senha</label> --}}
        <input type="password" name="senha" placeholder="Digite sua senha"><br>
        <br>

        <button class="log" type="submit">Cadastrar</button>
        {{#if msg}}
            <p>{{msg}}</p>
        {{else}}
            <p>{{msg2}}</p>
        {{/if}}
        </form>
    </main>
{{/if}}


